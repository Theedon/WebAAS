{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint", "react"],
  "rules": {
    // Adjust these rules according to your specific needs
    "react/jsx-props/has-prop-types": 0, // Disable prop-types check (often not necessary with TypeScript)
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ], // Allow unused arguments starting with an underscore
    "@typescript-eslint/interface-name-prefix": ["off", "interface"] // Optional: enforce interface prefix (if desired)
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
